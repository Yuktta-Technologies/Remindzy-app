<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.reminderpro">

    <!-- For Android 12 and above, and as a fallback for general exact alarm scheduling -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!--
         For Android 14 and above, specifically for apps whose core functionality
         is an alarm clock or calendar.
         For apps targeting Android 13 and below, you still need to declare SCHEDULE_EXACT_ALARM.
    -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- You'll also need POST_NOTIFICATIONS for Android 13+ if your alarms show notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReminderPro">

        <activity
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ReminderPro"
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:enabled="true"
            android:exported="true"
            android:name=".alarm.ReminderAlarmReceiver" />

    </application>

</manifest>